doctype html
head
 include head
 link(rel='stylesheet' href='/css/style.css')
include navbar
section(style='background-color:black; margin-top: 13rem; margin-bottom: 4rem;')
  .container.py-5
    .row
      .col-lg-4
        .card.mb-4
          .card-body.text-center
            img.rounded-circle.img-fluid(src=`/images/userPhotos/${user.photo}` alt='avatar' style='width: 150px;')
            h5.my-3=user.name
            p.text-muted.mb-1=user.roles
            
            .d-flex.justify-content-center.mb-2
              a(href=`/updateMe/${user._id}`)
                button.btn.btn-primary(type='button') EDIT
      .col-lg-8(style='margin-top: 6rem;')
        .card.mb-4
          .card-body
            .row
              .col-sm-3
                p.mb-0 Full Name
              .col-sm-9
                p.text-muted.mb-0=user.name
            hr
            .row
              .col-sm-3
                p.mb-0 Email
              .col-sm-9
                p.text-muted.mb-0(style='text-transform: lowercase;')=user.email
            hr
            .row
              .col-sm-3
                p.mb-0 Phone
              .col-sm-9
                p.text-muted.mb-0=user.phone
            hr
            .row
              .col-sm-3
                p.mb-0 score
              .col-sm-9
                p.text-muted.mb-0=user.sum
            hr
            .row
              .col-sm-3
                p.mb-0 location
              .col-sm-9
                p.text-muted.mb-0=user.location
            
include footer
