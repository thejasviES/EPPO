doctype html
head
    include head    
include navbar
.container-fluid.h-custom
  .row.d-flex.justify-content-center.align-items-center.h-100
    .col-md-9.col-lg-6.col-xl-5
      img.img-fluid(src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp' alt='Sample image')
    .col-md-8.col-lg-6.col-xl-4.offset-xl-1
      form.form--login
        .form-outline.mb-4
          input#email.form-control.form-control-lg(type='email' placeholder='Enter a valid email address')
          label.form-label(for='email' style="color:white;") Email address
        .form-outline.mb-3
          input#password.form-control.form-control-lg(type='password' placeholder='Enter password')
          label.form-label(for='password' style="color:white;") Password
      
        .text-center.text-lg-start.mt-4.pt-2
          button.btn.btn-primary.btn-lg(type='submit' style='padding-left: 2.5rem; padding-right: 2.5rem;') Login
          h3.fw-bold.mt-2.pt-1.mb-0(style="color:white;")
            | Don&apos;t have an account? 
            a.link-danger(href='/signUp') Register
include footer
